<configuration>

	<appender name="file" class="ch.qos.logback.core.FileAppender">
		<file>app.log</file>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p{5} %c{0}: %m%n</pattern>
		</encoder>
	</appender>

	<logger name="io.pivotal.bds.gemfire.fraud.server" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="file" />
	</root>

</configuration>
