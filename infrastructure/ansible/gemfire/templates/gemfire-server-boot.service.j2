[Unit]
Description=Gemfire Server
Requires=network.target
After=network.target

[Service]
Type=simple
User={{ server_user }}
Group={{ server_group }}
EnvironmentFile=/etc/gemfire.conf
ExecStart=/use/bin/java ${JAVA_OPTS} ${GEMFIRE_OPTS} -jar /opt/app/bin/{{ gemfire_boot_jar }}
TimeoutSec=5min
WorkingDirectory=/home/{{ server_user }}

[Install]
WantedBy=multi-user.target
